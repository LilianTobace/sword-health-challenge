{
  "root": true,
  "env": {
    "node": true,
    "es2021": true,
    "browser": true,
    "commonjs": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": 0,
    "no-console": "off",
    "max-len": ["error", { "code": 125 }],
    "prefer-destructuring": "off",
    "no-param-reassign": "off",
    "no-unused-vars": "off"
  },
  "plugins": [
    "jest"
  ]
}
